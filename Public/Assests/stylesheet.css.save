html  {
    font-family: sans-serif;
	height:100%;
    background-color: #666666;
	background-size: 100% 100%;
}

.login-register-bg {
	background-image:url("bg.png");
}

#view {
    width: 30%;
    min-height: 40%;
    left: 0px;
    background-color: #424242;
    opacity: 20%;
    padding: 25px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); 
    border-radius: 4px;
}
p {
    color: white;
}
.title {
    font-family: 'Biryani', sans-serif;
    margin-bottom: -20px;
    color: white;
}

input {
    caret-color: #8ab0e2;
    background-color: lightgray;
    color: #424242;
}

input[type=text], select {
  width: 80%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type=password], select {
  width: 80%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}


input[type=submit] {
  width: 80%;
  background-color: #8ab0e2;
  color: white;
  padding: 14px 20px;
  margin: 8px 0;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=submit]:hover {
  background-color: #6c8bb5;
}

a {
    text-decoration: none;
    color: white;
}
#stage {
    width: 100%;
    height: 100%;
    position: relative;
}

#top {
    width:98%;
